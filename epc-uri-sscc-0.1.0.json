{
    "$id": "https://ralphtro.github.io/TEMP_jsonSchemaExperiments/epc-uri-sscc-0.1.0.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Pattern to validate that epcList, childEPCs or parentID are populated with SSCC EPC URIs.",
    "title": "SSCC EPC URIs",
    "definitions": {
        "epc-uri-sscc": {
            "type": "string",
            "pattern": "^urn:epc:id:sscc:((\\d{6}\\.\\d{11}$)|(\\d{7}\\.\\d{10}$)|(\\d{8}\\.\\d{9}$)|(\\d{9}\\.\\d{8}$)|(\\d{10}\\.\\d{7}$)|(\\d{11}\\.\\d{6}$)|(\\d{12}\\.\\d{5}$))"
        }
    }
}