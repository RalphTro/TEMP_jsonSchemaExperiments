{
    "$id": "https://ralphtro.github.io/TEMP_jsonSchemaExperiments/gs1dl-uri-sscc-0.1.0.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Pattern to ensure that epcList, childEPCs or parentID are populated with SSCC GS1 Digital Link Web URIs.",
    "title": "SSCC GS1 Digital Link URI",
    "definitions": {
        "gs1dl-uri-sscc": {
            "type": "string",
            "pattern": "^(https?):(\/\/((([^\/?#]*)@)?([^\/?#:]*)(:([^\/?#]*))?))?([^?#]*)(\/00\/)\\d{18}$"
        }
    }
}
